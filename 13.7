def lw(text):
    longest = ''
    for char in text:
        if char.isalpha():
            pass
        else:
            text = text. replace(char, " ")
    for word in text.split():
        if len(word) > len(longest):
            longest = word
    return longest

def amount(text):
    for char in text:
        if char.isalpha():
            pass
        else:
            text = text. replace(char, " ")
    return len(text.split())

def cleaning(text):
    for char in text:
        if char.isalpha():
            pass
        else:
            text = text. replace(char, " ")
    text = text.split()
    for word in text:
        if len(word) < 2:
            text.remove(word)
    text = ' '.join(text)
    return text

def cleaning2(text):
    text = text.split()
    text = ' '.join(text)
    return text

def cleaning3(text, maxlen):
    text1 = ''
    count = 0
    text = text.split()
    text = ' '.join(text)
    for word in text.split():
        count += len(word)
        if count >= maxlen:
            text1 += '\n'
            count = len(word)
        elif text1 != '':
            text1 += ' '
            count += 1
        text1 += word
    return text1


